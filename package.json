	"peerDependencies": {
		"@types/react": ">=19.0.0",
		"react": ">=19.0.0",
		"react-devtools-core": ">=6.1.2"
	},
	"peerDependenciesMeta": {
		"@types/react": {
			"optional": true
		},
		"react-devtools-core": {
			"optional": true
		}
	},
	"ava": {
		"workerThreads": false,
		"serial": true,
		"files": [
			"test/**/*",
			"!test/helpers/**/*",
			"!test/fixtures/**/*"
		],
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--import=tsx"
		]
	},
	"prettier": "@vdemedes/prettier-config"
}
